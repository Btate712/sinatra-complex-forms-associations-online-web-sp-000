<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
  <p><label for="pet_name">Pet Name:</label>
    <input type="index" name="pet_name" id="pet_name">
  </p>
  <p>
    <% @owners.each do |owner| %>
      <input type="checkbox" name="pet[owner_ids][]" value=" <%= owner.id %> "
        id=" <%= owner.id %>" ><%= owner.name %></input>
    <% end %>
  <input type="submit" name="Create Pet">
</form>
